def runs_to_win(X, Y):
    return X - Y + 1

def main():
    # Read number of test cases
    T = int(input())
    
    # Process each test case
    for _ in range(T):
        # Read X and Y for the current test case
        X, Y = map(int, input().split())
        
        # Output the result
        print(runs_to_win(X, Y))

if __name__ == "__main__":
    main()
